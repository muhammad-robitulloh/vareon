# ==============================================
# ‚öôÔ∏è REPLIT CONFIG ‚Äî VAREON Multistage Workflow
# ==============================================

# Bahasa utama backend
language = "python3"

# Modul runtime yang dibutuhkan
modules = ["nodejs-20", "python-3.10", "web", "postgresql-16"]

# Channel Nix
[nix]
channel = "stable-24_05"

# Dependensi Python
[languages.python]
  build = "pip install -r server-python/requirements.txt"

# Dependensi NodeJS
[languages.javascript]
  build = "npm install"

# Direktori yang disembunyikan dari UI Replit
hidden = [".config", ".git", "node_modules", "dist", "__pycache__"]

# ==========================================================
# üí° ENVIRONMENT VARIABLES
# ==========================================================
[env]
PORT = "5000"
PYTHONUNBUFFERED = "1"

# ==========================================================
# üß± WORKFLOWS
# ==========================================================
[workflows]
runButton = "Start VAREON Ecosystem"

# üß© Workflow utama ‚Äî jalankan build dan backend server
[[workflows.workflow]]
name = "Start VAREON Ecosystem"
author = "agent"
mode = "sequential"

# 1Ô∏è‚É£ Install dependencies backend (Python)
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install --no-cache-dir -r server-python/requirements.txt"

# 2Ô∏è‚É£ Install & build frontend React
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ai_web_dashboard/frontend && npm install && npm run build"

# 3Ô∏è‚É£ Jalankan backend FastAPI menggunakan Uvicorn
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server-python && uvicorn main:app --host 0.0.0.0 --port 5000"

# ==========================================================
# üöÄ DEPLOYMENT
# ==========================================================
[deployment]
deploymentTarget = "autoscale"
build = [
  "pip install --no-cache-dir -r server-python/requirements.txt",
  "cd ai_web_dashboard/frontend && npm install && npm run build"
]
run = [
  "cd server-python && uvicorn main:app --host 0.0.0.0 --port 5000"
]

# ==========================================================
# üì¶ DEPENDENCIES
# ==========================================================
[deps]
pkgs = ["python3", "python3-pip", "nodejs", "npm"]
